<div class="container-fluid">
  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Tables Product</h1>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div
      class="card-header py-3 d-flex justify-content-between align-items-center"
    >
      <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
      <button
        type="button"
        onclick="location.href='/add_product'"
        class="btn btn-primary btn-sm"
      >
        add product
      </button>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>Tên Sản Phẩm</th>
              <th>Hình Ảnh</th>
              <th>Giá Nhập</th>
              <th>Giá Bán</th>
              <th style="max-width: 150px">action</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(function(product) { %>
            <tr>
              <td><%= product.name %></td>
              <td>
                <img
                  src="<%= product.image %>"
                  width="75"
                  class="img-thumbnail"
                  alt=""
                />
              </td>
              <td><%= product.buy_price %></td>
              <td><%= product.sell_price %></td>
              <td>
                <button
                  onclick="location.href='/products/<%= product._id %>'"
                  type="button"
                  class="btn btn-info"
                >
                  Edit
                </button>
                <button
                  onclick="deletePR('<%= product._id %>')"
                  type="button"
                  class="btn btn-danger"
                >
                  Remove
                </button>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  function deletePR(id_product) {
    if (confirm("are you sure?")) {
      window.location.href = `/products/delete/${id_product}`;
    }
  }
</script>
