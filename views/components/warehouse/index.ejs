<div class="container-fluid">
  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Kho</h1>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div
      class="card-header py-3 d-flex justify-content-between align-items-center"
    >
      <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
      <button
        type="button"
        onclick="location.href='/add_warehouse'"
        class="btn btn-primary btn-sm"
      >
        Thêm vào kho
      </button>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>Tên Sản Phẩm</th>
              <th>Tồn Kho</th>
              <th>Tổng số lượng</th>
              <!-- <th style="max-width: 150px">action</th> -->
            </tr>
          </thead>
          <tbody>
            <% warehouses.forEach(function(warehouse) { %>
            <tr>
              <td><%= warehouse?.product_id?.name %></td>
              <td><%= warehouse?.remaining_quality %></td>
              <td><%= warehouse.total_quality %></td>
              <!-- <td>
                <button
                  onclick="location.href='/warehouses/<%= warehouse._id %>'"
                  type="button"
                  class="btn btn-info"
                >
                  Edit
                </button>
                <button
                  onclick="deletePR('<%= warehouse._id %>')"
                  type="button"
                  class="btn btn-danger"
                >
                  Remove
                </button>
              </td> -->
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  function deletePR(id_product) {
    if (confirm("are you sure?")) {
      window.location.href = `/products/delete/${id_product}`;
    }
  }
</script>
