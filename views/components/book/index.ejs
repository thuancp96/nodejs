<div class="container-fluid">
  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Tables Book</h1>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div
      class="card-header py-3 d-flex justify-content-between align-items-center"
    >
      <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
      <button
        type="button"
        onclick="location.href='/add_book'"
        class="btn btn-primary btn-sm"
      >
        add book
      </button>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>title</th>
              <th>price</th>
              <th>author</th>
              <th>coverImage</th>
              <th style="max-width: 150px">action</th>
            </tr>
          </thead>
          <!-- <tfoot>
              <tr>
                <th>_id</th>
                <th>Name</th>
                <th>Birth date</th>
                <th>gender</th>
              </tr>
            </tfoot> -->
          <tbody>
            <% books.forEach(function(book) { %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.price %></td>
              <td><%= book.author?.name %></td>
              <td>
                <img
                  src="<%= book.coverImage %>"
                  width="75"
                  class="img-thumbnail"
                  alt=""
                />
              </td>
              <td>
                <button
                  onclick="location.href='/books/<%= book._id %>'"
                  type="button"
                  class="btn btn-info"
                >
                  Edit
                </button>
                <button
                  onclick="location.href='/books/clone/<%= book._id %>'"
                  type="button"
                  class="btn btn-info"
                >
                  Clone
                </button>
                <button
                  onclick="location.href='/books/delete/<%= book._id %>'"
                  type="button"
                  class="btn btn-danger"
                >
                  Remove
                </button>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
