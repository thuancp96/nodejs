<div class="container-fluid">
  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Orders</h1>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div
      class="card-header py-3 d-flex justify-content-between align-items-center"
    >
      <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
      <button
        type="button"
        onclick="location.href='/add_order'"
        class="btn btn-primary btn-sm"
      >
        add order
      </button>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>Nhân viên</th>
              <th>Order sản phẩm</th>
              <th>Số lượng</th>
              <th>Ngày</th>
              <th style="max-width: 150px">action</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(function(order) { %>
            <tr>
              <td><%= order.user.full_name %></td>
              <td><%= order.product.name %></td>
              <td><%= order.quality %></td>
              <td><%= order.date %></td>
              <td>
                <button
                  onclick="location.href='/orders/<%= order._id %>'"
                  type="button"
                  class="btn btn-info"
                >
                  Edit
                </button>
                <!-- <button
                  onclick="deletePR('<%= order._id %>')"
                  type="button"
                  class="btn btn-danger"
                >
                  Remove
                </button> -->
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
