<div class="container-fluid">
  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Tables User</h1>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div
      class="card-header py-3 d-flex justify-content-between align-items-center"
    >
      <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
      <button
        type="button"
        onclick="location.href='/add_user'"
        class="btn btn-primary btn-sm"
      >
        add user
      </button>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>_id</th>
              <th>Name</th>
              <th>Birth date</th>
              <th>gender</th>
              <th>action</th>
            </tr>
          </thead>
          <!-- <tfoot>
            <tr>
              <th>_id</th>
              <th>Name</th>
              <th>Birth date</th>
              <th>gender</th>
            </tr>
          </tfoot> -->
          <tbody>
            <% users.forEach(function(user) { %>
            <tr>
              <td><%= user._id %></td>
              <td><%= user.name %></td>
              <td><%= user.birthdate %></td>
              <td><%= user.gender ? 'male' : 'female' %></td>
              <td>
                <button
                  onclick="location.href='/users/<%= user._id %>'"
                  type="button"
                  class="btn btn-info"
                >
                  Edit
                </button>
                <button
                  onclick="location.href='/users/delete/<%= user._id %>'"
                  type="button"
                  class="btn btn-danger"
                >
                  Remove
                </button>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
